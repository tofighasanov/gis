@{
    ViewData["Title"] = "Panel";
}

<div class="container-fluid">

    <h1 class="h3 mb-3">Panel</h1>

    <div class="row g-3">
        <div class="col-12 col-md-6 col-xl-3">
            <div class="card shadow-sm">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <div class="text-muted small">Команды</div>
                        <div class="fs-4 fw-semibold">@ViewBag.TeamsCount</div>
                    </div>
                    <i class="bi bi-people fs-3"></i>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-6 col-xl-3">
            <div class="card shadow-sm">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <div class="text-muted small">Участники</div>
                        <div class="fs-4 fw-semibold">@ViewBag.ParticipantsCount</div>
                    </div>
                    <i class="bi bi-person-check fs-3"></i>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-6 col-xl-3">
            <div class="card shadow-sm">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <div class="text-muted small">Платежей cегодня</div>
                        <div class="fs-4 fw-semibold">@ViewBag.PaymentsToday</div>
                    </div>
                    <i class="bi bi-credit-card fs-3"></i>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-6 col-xl-3">
            <div class="card shadow-sm">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <div class="text-muted small">Доход cегодня</div>
                        <div class="fs-4 fw-semibold">@ViewBag.RevenueToday AZN</div>
                    </div>
                    <i class="bi bi-cash-coin fs-3"></i>
                </div>
            </div>
        </div>
    </div>

    <div class="card shadow-sm mt-3">
        <div class="card-body">
            <h5 class="card-title mb-3">Сводка</h5>
            <p class="mb-0">Здесь позже добавим графики и быстрые действия (импорт участников, создание команды, отчёт по платежам).</p>
        </div>
    </div>
</div>
