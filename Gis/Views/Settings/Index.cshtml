@{
    ViewData["Title"] = "Ayarlar";
}

<div class="container-fluid">
    <h1 class="h3 mb-3">Ayarlar</h1>

    <div class="card shadow-sm">
        <div class="card-body">
            <ul class="nav nav-tabs" id="settingsTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="profile-tab" data-bs-toggle="tab" data-bs-target="#tab-profile" type="button" role="tab">Profil</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="pref-tab" data-bs-toggle="tab" data-bs-target="#tab-pref" type="button" role="tab">Tərcihlər</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="security-tab" data-bs-toggle="tab" data-bs-target="#tab-security" type="button" role="tab">Təhlükəsizlik</button>
                </li>
            </ul>

            <div class="tab-content pt-3">
                <!-- Profil -->
                <div class="tab-pane fade show active" id="tab-profile" role="tabpanel">
                    <form>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Ad, Soyad</label>
                                <input type="text" class="form-control" placeholder="Ad Soyad">
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Email</label>
                                <input type="email" class="form-control" placeholder="example@mail.az">
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Telefon</label>
                                <input type="text" class="form-control" placeholder="+994...">
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary">Yadda saxla</button>
                            </div>
                        </div>
                    </form>
                </div>

                <!-- Tərcihlər -->
                <div class="tab-pane fade" id="tab-pref" role="tabpanel">
                    <form>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Dil</label>
                                <select class="form-select">
                                    <option>AZ</option>
                                    <option>RU</option>
                                    <option>EN</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Tema</label>
                                <select class="form-select">
                                    <option>Light</option>
                                    <option>Dark</option>
                                    <option>System</option>
                                </select>
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn btn-primary">Yadda saxla</button>
                            </div>
                        </div>
                    </form>
                </div>

                <!-- Təhlükəsizlik -->
                <div class="tab-pane fade" id="tab-security" role="tabpanel">
                    <form>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Yeni şifrə</label>
                                <input type="password" class="form-control">
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Təkrar şifrə</label>
                                <input type="password" class="form-control">
                            </div>
                            <div class="col-12">
                                <button type="submit" class="btn btn-warning">Şifrəni dəyiş</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
